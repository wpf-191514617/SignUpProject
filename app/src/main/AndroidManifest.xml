<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beitone.signup">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="design_width_in_dp"
            android:value="375" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="668" />
        <activity android:name=".ui.account.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.account.RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.account.SendAuthCodeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.account.ResetPasswordActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>