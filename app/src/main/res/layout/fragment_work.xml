<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_195dp"
        android:background="@color/colorAccent"
        android:paddingLeft="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutSelectProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="印度尼西亚美加达卫星新城项目"
            android:padding="@dimen/dimen_10dp"
            android:textColor="#ffffffff"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_down"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dimen_18dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:58"
                    android:textColor="#ffffffff"
                    android:textSize="29sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020年05月18日 星期一"
                    android:textColor="#ffffffff"
                    android:layout_marginTop="@dimen/dimen_14dp"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下班 08:00 - 18:00"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/dimen_6dp"/>

            </LinearLayout>


            <ImageView
                android:layout_width="@dimen/dimen_83dp"
                android:layout_height="@dimen/dimen_83dp"
                android:layout_marginRight="@dimen/dimen_19dp"/>

        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_top_radius"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_35dp"
        android:paddingLeft="@dimen/dimen_17dp"
        android:paddingRight="@dimen/dimen_17dp"
        android:layout_marginTop="-10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用中心"
            android:textColor="#ff222222"
            android:textSize="17sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>


    </LinearLayout>




</LinearLayout>