<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44.5dp"
        android:background="@color/grayf5"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/layoutWait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_47dp"
            android:background="@color/white"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_74dp"
                android:layout_height="@dimen/dimen_89dp"
                android:src="@drawable/ic_waiting"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册信息已提交审核，请耐心等待"
                android:textColor="#ff222222"
                android:textSize="17sp"
                android:layout_marginTop="@dimen/dimen_17dp"
                android:layout_marginBottom="@dimen/dimen_71dp"/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutFailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_47dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_74dp"
                android:layout_height="@dimen/dimen_89dp"
                android:src="@drawable/ic_failedpng"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核失败"
                android:textColor="#ff222222"
                android:textSize="17sp"
                android:layout_marginTop="@dimen/dimen_17dp"
                android:layout_marginBottom="@dimen/dimen_24dp"/>

            <TextView
                android:id="@+id/tvMemo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="很抱歉，您的信息提供有误，请重新修改并上传"
                android:textColor="#ff999999"
                android:textSize="14sp"
                android:layout_marginBottom="@dimen/dimen_30dp"/>


            <com.beitone.signup.widget.AppButton
                android:id="@+id/btnPerfectInfo"
                android:layout_width="155dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginBottom="@dimen/dimen_39dp"
                android:text="去完善"/>
            

        </LinearLayout>


    </LinearLayout>



    <include layout="@layout/mytoolbar"/>


</RelativeLayout>