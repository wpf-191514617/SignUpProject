<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="44.5dp"
    android:background="@color/grayf5"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dimen_75dp"
            android:layout_height="@dimen/dimen_75dp"
            android:src="@drawable/appicon"/>


        <com.beitone.signup.widget.InputLayout
            android:id="@+id/inputWechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_50dp"
            app:inputLable="官方微信"
            app:inputGravity="right" />

        <include layout="@layout/line"/>


        <com.beitone.signup.widget.InputLayout
            android:id="@+id/inputWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:inputLable="官方网站"
            app:inputGravity="right"/>

        <include layout="@layout/line"/>


        <com.beitone.signup.widget.InputLayout
            android:id="@+id/inputService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:inputLable="官方电话"
            app:inputGravity="right"/>


        <include layout="@layout/line"/>


        <com.beitone.signup.widget.InputLayout
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:inputLable="官方邮箱"
            app:inputGravity="right"/>

        <include layout="@layout/line"/>


        <LinearLayout
            android:id="@+id/layoutVersion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="版本"
                android:textColor="@color/gray33"
                android:textSize="@dimen/sp_14" />


            <View
                android:id="@+id/updateHintView"
                android:layout_width="@dimen/dimen_10dp"
                android:layout_height="@dimen/dimen_10dp"
                android:visibility="invisible"
                android:background="@drawable/bg_red_circle"/>


            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray33"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dimen_15dp"
                />


        </LinearLayout>

        <include layout="@layout/line"/>

        <TextView
            android:id="@+id/tvCopyright"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            android:lineSpacingExtra="@dimen/dimen_5dp"
            android:paddingBottom="@dimen/dimen_60dp"
            android:textColor="#ff999999"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>

    <include layout="@layout/mytoolbar"/>

</RelativeLayout>