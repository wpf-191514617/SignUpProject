<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#00000000">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="72dp">

        <TextView
            android:id="@+id/tv_hide_pass"
            android:visibility="gone"
            android:layout_marginLeft="110dp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_hide_success"
            android:text="PASS"
            android:paddingLeft="18dp"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:background="@drawable/shape_oval_hide"
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_hide_log"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="8dp"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_vaptcha_log" />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progress_hide_finish"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:indeterminateDrawable="@drawable/layer_progress_finish" />

    <ProgressBar
        android:id="@+id/progress_hide"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:indeterminateDrawable="@drawable/layer_progress" />

</RelativeLayout>