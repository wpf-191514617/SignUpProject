<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vaptcha_button"
    android:layout_width="match_parent"
    android:layout_height="48dp"
   >
    <TextView
        android:id="@+id/button_verfiy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_button_right_bg"
        android:gravity="center_vertical"
        android:paddingLeft="64dp"
        android:textColor="#ffffff"
        android:text="点击验证"
        android:textSize="14dp" />

    <RelativeLayout
        android:animateLayoutChanges="true"
        android:background="@drawable/shape_button_left_bg"
        android:layout_width="48dp"
        android:layout_height="match_parent">
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/button_progress"
            android:layout_width="32dp"
            android:indeterminate="false"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/layer_progress"
            android:layout_height="32dp" />

        <ImageView
            android:id="@+id/iv_button_log"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/icon" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_button_help"
        android:src="@drawable/icon_mark_gray"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:padding="8dp"
        android:layout_height="match_parent" />

</RelativeLayout>