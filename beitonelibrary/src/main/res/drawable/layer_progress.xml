<?xml version="1.0" encoding="utf-8"?>
<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="2160.0">

    <shape android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="14"
        android:useLevel="false">

        <gradient android:centerColor="#12C0FA"
            android:endColor="#12C0FA"
            android:startColor="#A0E6FD"
            android:type="sweep"/>

    </shape>

</rotate>